{{#extends "base"}}
{{#block "content"}}
<h2>Editing {{editMovie.title}}</h2>
<form method="post">
    <div>
        <label class="form-label">Movie Title</label>
        <input type="text" name="movie" class="form-control" value="{{editMovie.title}}">
    </div>
    <div>
        <label class="form-label">Movie Plot</label>
        <input type="text" name="plot" class="form-control" value="{{editMovie.plot}}">
    </div>
    <button class="mt-3">Submit</button>
</form> 



{{/block}}
{{/extends}}


